autoload -Uz compinit
[[ -n ${ZDOTDIR}/.zcompdump(#qN.mh+24) ]] && compinit || compinit -C

# Tmux
[[ -z "$TMUX" ]] \
    && exec tmux new-session -A -s home

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]
then
    source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

source /usr/share/zsh-theme-powerlevel10k/powerlevel10k.zsh-theme

# vi-mode
function zvm_config() {
    ZVM_LINE_INIT_MODE=$ZVM_MODE_INSERT
    ZVM_VI_INSERT_ESCAPE_BINDKEY=jk
    ZVM_VI_HIGHLIGHT_BACKGROUND=#264f78
}
source /usr/share/zsh/plugins/zsh-vi-mode/zsh-vi-mode.plugin.zsh

# ASDF
source /opt/asdf-vm/asdf.sh

# direnv
eval "$(direnv hook zsh)"

# fzf
source /usr/share/fzf/key-bindings.zsh
source /usr/share/fzf/completion.zsh

# OMZSH
for f in $(find /usr/share/oh-my-zsh/lib/ -iname "*.zsh" | sort -u)
do
    source "$f"
done
source /usr/share/oh-my-zsh/plugins/archlinux/archlinux.plugin.zsh
source /usr/share/oh-my-zsh/plugins/extract/extract.plugin.zsh
source /usr/share/oh-my-zsh/plugins/git/git.plugin.zsh
source /usr/share/oh-my-zsh/plugins/git-extras/git-extras.plugin.zsh
source /usr/share/oh-my-zsh/plugins/gitignore/gitignore.plugin.zsh
source /usr/share/oh-my-zsh/plugins/python/python.plugin.zsh
source /usr/share/oh-my-zsh/plugins/pip/pip.plugin.zsh
source /usr/share/oh-my-zsh/plugins/docker/docker.plugin.zsh
source /usr/share/oh-my-zsh/plugins/docker-compose/docker-compose.plugin.zsh

# zsh-users
source /usr/share/zsh/plugins/zsh-history-substring-search/zsh-history-substring-search.zsh
bindkey -M vicmd 'k' history-substring-search-up
bindkey -M vicmd 'j' history-substring-search-down
bindkey "$terminfo[kcuu1]" history-substring-search-up
bindkey "$terminfo[kcud1]" history-substring-search-down

source /usr/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh

[[ ! -d $HOME/.config/zsh/zsh-interactive-cd ]] \
    && git clone https://github.com/changyuheng/zsh-interactive-cd.git $HOME/.config/zsh/zsh-interactive-cd
source $HOME/.config/zsh/zsh-interactive-cd/zsh-interactive-cd.plugin.zsh

# zsh-plugins
[[ ! -d $HOME/.config/zsh/zsh-plugins ]] \
    && git clone https://github.com/emersonmx/zsh-plugins.git $HOME/.config/zsh/zsh-plugins
source $HOME/.config/zsh/zsh-plugins/chezmoi/chezmoi.zsh
source $HOME/.config/zsh/zsh-plugins/python/python.zsh
source $HOME/.config/zsh/zsh-plugins/tmuxp/tmuxp.zsh

# alias
alias ssh='TERM="xterm-256color" ssh'
alias gcloud='TERM="xterm-256color" gcloud'
alias ls="exa --icons --group-directories-first"
alias la="ls -lah"
unalias gk 2>/dev/null
unalias gg 2>/dev/null
unalias ga 2>/dev/null
unalias gss 2>/dev/null
unalias gp 2>/dev/null
unalias gl 2>/dev/null
unalias gb 2>/dev/null
unalias gco 2>/dev/null
unset -f ggp 2>/dev/null
unset -f ggl 2>/dev/null

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
