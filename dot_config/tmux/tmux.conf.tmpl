# Settings
set -g base-index 1
set -gw pane-base-index 1
set -gw mode-keys vi
set -g renumber-windows on
set -g @shell_mode 'vi'
set -g mouse on
set -g allow-rename off
set -g set-titles-string '#T'
set -g escape-time 5
set -g allow-passthrough on
{{ if eq .chezmoi.osRelease.id "ubuntu" -}}
set -sa terminal-features ',alacritty:RGB'
{{- else -}}
set -sa terminal-features ',xterm-256color:RGB'
{{- end }}

# Variables
primary_color='#abb2bf'
secondary_color='#1e2127'
active_color='#98c379'

# Plugins Settings
set -g @prefix_highlight_bg $primary_color
set -g @prefix_highlight_fg $secondary_color
set -g @prefix_highlight_show_copy_mode 'on'

# Freshness
set -g status-bg $secondary_color
set -g status-fg $primary_color
set -g status-left-length 50
set -g status-left ' [#S] '
set -g status-right '#{prefix_highlight}'
set -ag status-right '#{?pane_synchronized,#[bg='$primary_color']#[fg='$secondary_color'] S ,}'
set -ag status-right '#[bg='$secondary_color']#[fg='$primary_color']'
set -ag status-right ' '
{{ if eq .chezmoi.osRelease.id "ubuntu" -}}
set -ag status-right '#{battery_icon_status}#{battery_percentage} '
{{- else -}}
set -ag status-right '#{battery_icon_status}#{battery_percentage}%% '
{{- end }}
set -ag status-right '#[bg='$secondary_color']#[fg='$primary_color']'
set -ag status-right '|'
set -ag status-right ' #(date +"%Y-%m-%d %H:%M") '

set -g window-status-format '#I #W'
set -g window-status-current-format '#{?window_zoomed_flag,#[bg='$active_color'],} #I: #W '
set -gw window-status-current-style bg=$primary_color,fg=$secondary_color
set -g pane-active-border-style fg=$primary_color
set -g pane-border-style fg=$secondary_color

# Binds
unbind C-b
set -g prefix C-a

# Toggle status bar
bind-key -n M-S set -g status

# Toggle zoom
bind-key -n M-z resize-pane -Z

# Sync panes
bind-key -n M-s set synchronize-panes

# Switch windows alt+number
bind-key -n M-1 select-window -t 1
bind-key -n M-2 select-window -t 2
bind-key -n M-3 select-window -t 3
bind-key -n M-4 select-window -t 4
bind-key -n M-5 select-window -t 5
bind-key -n M-6 select-window -t 6
bind-key -n M-7 select-window -t 7
bind-key -n M-8 select-window -t 8
bind-key -n M-9 select-window -t 9
bind-key -n M-0 select-window -t 10

# Easy pane navigation
is_vim="ps -o state= -o comm= -t '#{pane_tty}' \
    | grep -iqE '^[^TXZ ]+ +(\\S+\\/)?g?(view|n?vim?x?)(diff)?$'"

bind-key -n 'M-h' if-shell "$is_vim" 'send-keys M-h' 'select-pane -L'
bind-key -n 'M-j' if-shell "$is_vim" 'send-keys M-j' 'select-pane -D'
bind-key -n 'M-k' if-shell "$is_vim" 'send-keys M-k' 'select-pane -U'
bind-key -n 'M-l' if-shell "$is_vim" 'send-keys M-l' 'select-pane -R'
bind-key -n 'M-p' if-shell "$is_vim" 'send-keys M-p' 'select-pane -l'

bind-key -T copy-mode-vi 'M-h' select-pane -L
bind-key -T copy-mode-vi 'M-j' select-pane -D
bind-key -T copy-mode-vi 'M-k' select-pane -U
bind-key -T copy-mode-vi 'M-l' select-pane -R
bind-key -T copy-mode-vi 'M-p' select-pane -l

# Selection
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi C-v send-keys -X rectangle-toggle
bind-key -T copy-mode-vi y send-keys -X copy-selection-and-cancel

# List of plugins
set -g @plugin 'Morantron/tmux-fingers'
set -g @plugin 'laktak/extrakto'
set -g @plugin 'tmux-plugins/tmux-battery'
set -g @plugin 'tmux-plugins/tmux-pain-control'
set -g @plugin 'tmux-plugins/tmux-prefix-highlight'
set -g @plugin 'tmux-plugins/vim-tmux-focus-events'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-sessionist'
set -g @plugin 'tmux-plugins/tmux-yank'
set -g @plugin 'tmux-plugins/tpm'

# Check for tpm and install if not exists
if "test ! -d $HOME/.config/tmux/plugins/tpm" \
   "run 'git clone https://github.com/tmux-plugins/tpm $HOME/.config/tmux/plugins/tpm'"

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run "$HOME/.config/tmux/plugins/tpm/tpm"
